generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  PHARMACIST
  CASHIER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      UserRole @default(CASHIER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Supplier {
  id        String    @id @default(cuid())
  name      String
  contact   String?
  email     String?
  address   String?
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ReturnRecord {
  id          String       @id @default(cuid())
  saleId      String
  sale        Sale         @relation(fields: [saleId], references: [id])
  items       ReturnItem[]
  reason      String
  refundAmount Float
  processedBy String?      // User ID of staff
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ReturnItem {
  id        String       @id @default(cuid())
  returnId  String
  return    ReturnRecord @relation(fields: [returnId], references: [id])
  batchId   String
  batch     Batch        @relation(fields: [batchId], references: [id])
  quantity  Int
}

model Product {
  id            String   @id @default(cuid())
  name          String
  description   String?
  category      String
  manufacturer  String?
  minStockLevel Int      @default(10)
  price         Float // Cost price
  sellingPrice  Float
  supplierId    String?
  supplier      Supplier? @relation(fields: [supplierId], references: [id])
  batches       Batch[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Batch {
  id          String     @id @default(cuid())
  productId   String
  product     Product    @relation(fields: [productId], references: [id])
  quantity    Int
  expiryDate  DateTime
  batchNumber String     @unique
  saleItems   SaleItem[]
  returnItems ReturnItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Sale {
  id          String     @id @default(cuid())
  totalAmount Float
  paymentMethod String   @default("CASH") // CASH, CARD, UPI
  cashierId   String
  cashier     User       @relation(fields: [cashierId], references: [id])
  items       SaleItem[]
  returns     ReturnRecord[]
  createdAt   DateTime   @default(now())
}

model SaleItem {
  id        String @id @default(cuid())
  saleId    String
  sale      Sale   @relation(fields: [saleId], references: [id])
  batchId   String
  batch     Batch  @relation(fields: [batchId], references: [id])
  quantity  Int
  price     Float // Price at time of sale
}
